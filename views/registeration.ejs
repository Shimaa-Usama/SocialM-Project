<%- include('shared/header.ejs')%> 

    <body id="login">

        <div class="overlay">
        
            <!-- ======================Registration form================================= -->
            <div class="container pt-5">
                <div class="row">
                    <div class="col-md-7 m-auto p-5">
                        <% if (exists.length !== 0) { %>
                            <div class="alert alert-danger my-3">
                                email exists                
                            </div>
                        <% } %>
                        <div class="form p-5 ">
                            <h2 class="text-center text-white">Registration</h2>
                            <form action="/handleSignUp" method="POST">
                                <div class="row mt-3">
                                    <div class="col">
                                        <input value="<%= oldInputs.length ==0?'':oldInputs[0].fname %>" name="fname" type="text" class="form-control inp pt-3" placeholder="First Name">
                                        <% if (errors.find(e =>e.param == 'fname')) { %>
                                            <div class="alert alert-danger my-3">
                                                First Name not valid
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="col">
                                        <input value="<%= oldInputs.length ==0?'':oldInputs[0].lname %>" name="lname" type="text" class="form-control inp pt-3" placeholder="Last Name">
                                        <% if (errors.find(e =>e.param == 'lname')) { %>
                                            <div class="alert alert-danger my-3">
                                                Last Name not valid
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                <input value="<%= oldInputs.length ==0?'':oldInputs[0].uname %>" name="uname" type="text" class="form-control inp pt-3" placeholder="Username">
                                <% if (errors.find(e =>e.param == 'uname')) { %>
                                    <div class="alert alert-danger my-3">
                                        Name not valid
                                    </div>
                                <% } %>
                                <input value="<%= oldInputs.length ==0?'':oldInputs[0].email %>" name="email" type="email" class="form-control inp pt-3" placeholder="Email">
                                <% if (errors.find(e =>e.param == 'email')) { %>
                                    <div class="alert alert-danger my-3">
                                        E-mail not valid
                                    </div>
                                <% } %>
                                <input value="<%= oldInputs.length ==0?'':oldInputs[0].password %>" name="password" type="password" class="form-control inp pt-3 mb-3" placeholder="Password">
                                <% if (errors.find(e =>e.param == 'password')) { %>
                                    <div class="alert alert-danger my-3">
                                        Password not valid
                                    </div>
                                <% } %>
                                <button type="submit " class="btn btn-outline-info text-white w-100">Sign Up</button>
                                <p class="text-center pb-3"> <a href="/" class="text-white mt-3 d-block">Sign In Here</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<%- include('shared/footer.ejs')%> 
