<%- include('shared/header.ejs')%> 



<body id="home">
    <%- include('shared/navbar.ejs')%> 




    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 m-auto card p-5">
                <div class="">

                    <% if (valid.length) { %>
                        <div class="alert alert-success my-3">
                            done                        
                        </div>
                    <% } %>
                    <h3>Account Setting</h3>
                    <hr>
                    <form action="/handleSettings" method="POST">
                        <input value="<%= oldPassword.length ==0?'':oldPassword[0].oldPass %>" name="oldPass" placeholder="Enter Old Password" type="text" class="form-control my-2">
                        <% if (oldPass.length) { %>
                            <div class="alert alert-danger my-3">
                                Password incorrect                       
                            </div>
                        <% } %>
                        <input name="newPass" placeholder="New Password" type="text" class="form-control my-2">
                        <% if (notValid.find(e =>e.param == 'newPass')) { %>
                            <div class="alert alert-danger my-3">
                                New Password not valid
                            </div>
                        <% } %>
                        <input name="reNewPass" placeholder="Repeat Password" type="text" class="form-control my-2">
                        <% if (notValid.find(e =>e.param == 'reNewPass')) { %>
                            <div class="alert alert-danger my-3">
                                Not Match!!
                            </div>
                        <% } %>
                        <button class="btn btn-info mt-3">Save Setting</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('shared/footer.ejs')%> 
